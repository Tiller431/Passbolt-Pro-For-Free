{
    "name": "passbolt/passbolt_api",
    "description": "Open source password manager for teams",
    "type": "application",
    "keywords": [
        "password",
        "passbolt"
    ],
    "homepage": "https://www.passbolt.com",
    "license": "AGPL-3.0-or-later",
    "authors": [
        {
            "name": "Passbolt Team",
            "homepage": "https://www.passbolt.com/credits"
        }
    ],
    "support": {
        "bugs": "https://github.com/passbolt/passbolt/issues",
        "help": "https://www.passbolt.com/help",
        "source": "https://github.com/passbolt/passbolt"
    },
    "repositories": [
        {
            "type": "vcs",
            "url": "https://github.com/passbolt/migrations.git",
            "no-api": true
        },
        {
            "type": "vcs",
            "url": "https://github.com/passbolt/passbolt_selenium_api.git",
            "no-api": true
        },
        {
            "type": "vcs",
            "url": "https://github.com/passbolt/passbolt_test_data.git",
            "no-api": true
        }
    ],
    "require": {
        "php": ">=7.0",
        "cakephp/cakephp": "3.5.*",
        "mobiledetect/mobiledetectlib": "2.*",
        "cakephp/migrations": "1.7.1001",
        "cakephp/plugin-installer": "~1.0",
        "ramsey/uuid": "^3.7",
        "singpolyma/openpgp-php": "^0.3.0",
        "thadafinser/user-agent-parser": "^2.0",
        "donatj/phpuseragentparser": "^0.7.0",
        "lorenzo/cakephp-email-queue": "^3.1",
        "burzum/file-storage": "1.2.1",
        "burzum/cakephp-imagine-plugin": "2.1.1",
        "ezyang/htmlpurifier": "dev-master"
    },
    "require-dev": {
        "psy/psysh": "@stable",
        "cakephp/debug_kit": "~3.2",
        "cakephp/bake": "~1.1",
        "phpunit/phpunit": "^5.7|^6.0",
        "cakephp/cakephp-codesniffer": "^3.0",
        "satooshi/php-coveralls": "~1.0",
        "passbolt/passbolt_selenium_api": "dev-master",
        "passbolt/passbolt_test_data": "^2.0.6"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src",
            "Passbolt\\RememberMe\\": "./plugins/Passbolt/RememberMe/src",
            "Passbolt\\Tags\\": "./plugins/Passbolt/Tags/src",
            "Passbolt\\WebInstaller\\": "./plugins/Passbolt/WebInstaller/src",
            "Passbolt\\License\\": "./plugins/Passbolt/License/src",
            "PassboltTestData\\": "./plugins/PassboltTestData/src",
            "PassboltSeleniumApi\\": "./plugins/PassboltSeleniumApi/src",
            "Passbolt\\AccountSettings\\": "./plugins/Passbolt/AccountSettings/src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "tests",
            "Cake\\Test\\": "./vendor/cakephp/cakephp/tests",
            "Passbolt\\License\\Test\\": "./plugins/Passbolt/License/tests",
            "Passbolt\\Tags\\Test\\": "./plugins/Passbolt/Tags/tests",
            "PassboltSeleniumApi\\Test\\": "./plugins/PassboltSeleniumApi/tests",
            "Passbolt\\AccountSettings\\Test\\": "./plugins/Passbolt/AccountSettings/tests"
        }
    },
    "scripts": {
        "post-install-cmd": [
            "App\\Console\\Installer::postInstall"
        ],
        "install-dev": [
            "@composer install --dev",
            "npm install",
            "./node_modules/.bin/grunt appjs-update",
            "./node_modules/.bin/grunt styleguide-update"
        ],
        "post-create-project-cmd": "App\\Console\\Installer::postInstall",
        "post-autoload-dump": "Cake\\Composer\\Installer\\PluginInstaller::postAutoloadDump",
        "check": [
            "@test",
            "@cs-check"
        ],
        "cs-check": "phpcs --colors -p --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests ./plugins",
        "cs-fix": "phpcbf --colors --standard=vendor/cakephp/cakephp-codesniffer/CakePHP ./src ./tests ./plugins",
        "test": "phpunit --colors=always"
    },
    "prefer-stable": true
}
